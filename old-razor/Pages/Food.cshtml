@page
@{
    ViewData["Title"] = "Food Recommendations";
}

<!-- Hero Banner -->
<section class="food-hero">
    <div class="hero-overlay">
        <h1>Dining at UC</h1>
        <p>Discover on-campus food options, coffee spots, and nearby eateries around Lindner Hall.</p>
    </div>
</section>

<!-- Food Cards Section -->
<section class="food-section">
    <!-- Starbucks in Lindner Hall -->
    <div class="food-card">
        <img src="/images/starbucks.jpg" alt="Starbucks Lindner Hall">
        <div class="food-card-body">
            <h3>Starbucks ☕</h3>
            <p>Located on the 1st floor of Lindner Hall. Grab coffee, snacks, and study-friendly vibes.</p>
            <a class="btn btn-primary" href="https://www.uc.edu/campus-life/food/locations-hours/cafes.html#lcobs" target="_blank">View Hours</a>
        </div>
    </div>

    <!-- Subway Near Campus -->
    <div class="food-card">
        <img src="/images/subway.jpg" alt="Subway">
        <div class="food-card-body">
            <h3>Subway 🥪</h3>
            <p>Fresh sandwiches and salads near campus, perfect for a quick meal between classes.</p>
            <a class="btn btn-primary" href="https://www.uc.edu/campus-life/food/locations-hours/food-court.html" target="_blank">View Hours</a>
        </div>
    </div>

    <!-- TUC Food Court -->
    <div class="food-card">
        <img src="/images/sslc_foodcourt.jpg" alt="TUC Food Court">
        <div class="food-card-body">
            <h3>TUC Food Court 🍔</h3>
            <p>Multiple dining options including pizza, Asian cuisine, and grab-and-go choices.</p>
            <a class="btn btn-primary" href="https://www.uc.edu/campus-life/food/locations-hours/food-court.html" target="_blank">View Hours</a>
        </div>
    </div>

    <!-- Campus Convenience Stores -->
    <div class="food-card">
        <img src="/images/convenience_store.jpg" alt="Convenience Store">
        <div class="food-card-body">
            <h3>Campus Convenience Stores 🛒</h3>
            <p>Quick snacks, drinks, and essentials around campus for busy students.</p>
            <a class="btn btn-primary" href="https://www.uc.edu/campus-life/food/locations-hours/convenience-stores.html" target="_blank">More Information</a>
        </div>
    </div>
</section>
